<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/villagerScroll"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintTop_toBottomOf="@id/toolbarParent"
    app:layout_constraintBottom_toBottomOf="parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/fishborder"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/filterby">
            <TextView
                android:id="@+id/filterbytext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Filter By"
                android:fontFamily="@font/josefin_sans_semibold"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="18sp" />
            <Button
                android:id="@+id/clearvillagers"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Reset"
                android:fontFamily="@font/josefin_sans_semibold"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/fishclear"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ExpandableListView
            android:id="@+id/filter"
            app:layout_constraintTop_toBottomOf="@+id/filterby"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:color/white"
            android:dividerHeight="1dp"/>

        <TextView
            android:id="@+id/sortby"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@color/fishborder"
            android:text="Sort By"
            android:fontFamily="@font/josefin_sans_semibold"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/filter"
            android:textSize="18sp" />

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/sort"
            app:layout_constraintTop_toBottomOf="@+id/sortby"
            android:layout_height="wrap_content"
            app:flexWrap="wrap"
            app:alignItems="center"
            app:alignContent="center"
            app:justifyContent="center"
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:padding="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>